<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSecondary"
    android:foregroundTint="#D10606"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="-2dp"
    tools:layout_editor_absoluteY="56dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/exo_2_semibold"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:layout_marginBottom="8dp"
                android:textColor="?colorOnSecondary"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_money" />

                <EditText
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_gravity="bottom"
                    android:hint="@string/value"
                    android:inputType="number"
                    android:text=""
                    android:textColor="?colorOnSecondary"
                    android:textColorHighlight="?colorOnSecondary"
                    android:textColorHint="?colorOnSecondary"
                    android:textColorLink="?colorOnSecondary"
                    android:textSize="8sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="3dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_persons" />

                <EditText
                    android:id="@+id/persons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="@string/number_people"
                    android:inputType="number"
                    android:text=""
                    android:textColor="?colorOnSecondary"
                    android:textColorHint="?colorOnSecondary"
                    android:textColorLink="?colorOnSecondary"
                    android:textSize="8sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/v_individual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/exo_2"
                android:text="@string/individual_value"
                android:textAlignment="center"
                android:textColor="?colorOnSecondary"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="5dp"
                android:text="R$ 0,00"
                android:textColor="?colorOnSecondary"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/sound"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="25dp"
                    android:backgroundTint="?colorSecondaryVariant"
                    android:clickable="true"
                    app:fabCustomSize="30dp"
                    app:fabSize="auto"
                    app:maxImageSize="15dp"
                    app:srcCompat="@drawable/ic_sound"
                    app:tint="?colorOnPrimary" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/share"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:foregroundTint="?colorOnPrimary"
                    android:tint="?colorOnPrimary"
                    app:backgroundTint="?colorSecondaryVariant"
                    app:fabCustomSize="30dp"
                    app:maxImageSize="15dp"
                    app:rippleColor="?colorOnPrimary"
                    app:srcCompat="@drawable/ic_share"
                    app:tint="?colorOnPrimary" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>